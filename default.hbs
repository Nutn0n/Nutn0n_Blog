<html>
<head>
    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    {{! Google site verification  }}
    <meta name="google-site-verification" content="oYiRsANQU5NXJmMEc35E0n_chMxkaeacKJjvZSYwXxY" />

    {{! Styles }}

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' type='text/css' data-noprefix>
    <link rel="stylesheet" type="text/css" href="{{ asset "/css/ionicons.min.css" }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset "/css/magnific-popup.css" }}"/>
    <link rel="stylesheet"  type="text/css" href="{{ asset "/css/highlight.min.css" }}" />
    <link rel="stylesheet"  type="text/css" href="{{ asset "/css/theme.css" }}" />
    <link rel="stylesheet"  type="text/css" href="{{ asset "/css/fonts.css" }}" />

    {{! Responsive Meta Tags }}
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-touch-fullscreen" content="yes" />
    <meta name="HandheldFriendly" content="True">

    {{! iOS and Android icons  }}
    <link rel="icon" sizes="any" mask href="{{asset "/images/nutn0n-app.svg"}}">
    <link rel='icon' href="{{asset "/images/nutn0n-app.png"}}">
    <link rel="apple-touch-icon" href="{{asset "/images/nutn0n-app.png"}}">
    <link rel="shortcut icon" href="{{asset "/images/favicon.ico"}}">

    <link rel="mask-icon" sizes="any" href="{{asset "/images/nutn0n-app.svg"}}" color="#1B1B1E">

    {{! Windows and Microsoft Edge Support}}

    <meta name="msapplication-TileImage" content="{{asset "/images/win-tile-icon"}}"/>
    <meta name="msapplication-TileColor" content="#2E2E2E"/>

    {{! Social Graph }}
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="{{@blog.title}}">
    <meta property="article:author" content="https://www.facebook.com/KamarovAlex"/>

    <meta name="twitter:site" content="@nutn0n"/>
    <meta name="twitter:domain" content="nutn0n"/>
    <meta name="twitter:creator" content="@nutn0n"/>

	   {{#if post}}
		  {{#post}}
			<meta property="og:type" content="article">
			<meta property="article:published_time" content="{{date format='YYYY-MM-DD, hh:mm:ss'}}">
			{{#if tags}}{{#foreach tags}}<meta property="article:tag" content="{{name}}">{{/foreach}}{{/if}}
			<meta property="og:url" content="{{url absolute='true'}}" />
			<meta property="og:title" content="{{{title}}}" />
			<meta property="og:description" content="{{excerpt}}" />
      {{/post}}
   {{else}}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{url absolute='true'}}" />
    <meta property="og:title" content="Nutn0n Blog" />
    <meta property="og:description" content="A personal blog based on interesting about Computer Science, Web Development, Science and other. Developed and written by @Nutn0n." />
    <meta property="og:image" content="{{asset "/images/og.png"}}" />
   {{/if}}

{{ghost_head}}

</head>
<body class="oak-alizarin {{body_class}} forcetouchsupport">

  <div id="fb-root"></div>
   <script>
       (function(d, s, id) {
           var js, fjs = d.getElementsByTagName(s)[0];
           if (d.getElementById(id)) {
               return;
           }
           js = d.createElement(s); js.id = id;
           js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=860554567349323";
           fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
      </script>


    {{navigation}}

	{{{body}}}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/javascript-state-machine/2.0.0/state-machine.min.js"></script>
    <script src="{{asset "/js/jquery.ghostHunter.min.js"}}"></script>
    <script src="{{asset "/js/jquery.fitvids.js"}}"></script>
    <script src="{{asset "/js/custom.js"}}"></script>
    <script src="{{asset "/js/twitter.js"}}"></script>
    <script src="{{asset "/js/analytics.js"}}"></script>
    <script src="{{asset "/js/retina.js"}}"></script>


    {{ghost_foot}}

    {{!> google-analytics}}

</body>
</html>
